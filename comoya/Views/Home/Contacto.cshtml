
@{
    ViewBag.Title = "Contacto";
}
	<!-- +++++ Contact Section +++++ -->

<div class="container pt">
    <div class="row mt">
        <div class="col-lg-6 col-lg-offset-3 centered">
            <h3>CONTACTA CON NOSOTROS</h3>
            <hr>
        </div>
    </div>
    <div class="row mt">
        <div class="col-lg-8 col-lg-offset-2">
            <form role="form">
                <div class="form-group">
                    <input type="name" class="form-control" id="NameInputEmail1" placeholder="Ingresa tu Nombre">
                    <br>
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Ingresa tu email">
                    <br>
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" id="subjectEmail1" placeholder="Asunto">
                    <br>
                </div>
                <textarea class="form-control" rows="6" placeholder="Tu mensaje aqui"></textarea>
                <br>
                <button type="submit" class="btn btn-success">ENVIAR</button>
            </form>
        </div>
    </div><!-- /row -->
</div><!-- /container -->